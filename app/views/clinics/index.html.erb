<div class="container">
  <p id="notice"><%= notice %></p>

  <% if not @search || @search != "" %>
    <p style="color:white;font-size:24px;margin-bottom:20px">search results for "<%= @search %>"</p>
  <% end %>
  
  <table >
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Category</th>
        <th>Rating</th>
        <th>Year</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @clinics.each do |clinic| %>
        <tr>
          <td><%= link_to clinic.name, clinic %></td>
          <td><%= clinic.address %></td>
          <td><%= clinic.category %></td>
          <td><%= clinic.rating %></td>
          <td><%= clinic.year %></td>
        </tr>
      <% end %>
    </tbody>
  </table>


  <%= link_to 'New Clinic', new_clinic_path, class: 'btn btn-danger', style: 'color:white;text-decoration:none' %>
  <%= link_to "Export as CSV", clinics_path(format: 'csv'), class: 'btn btn-primary', style: 'color:white;text-decoration:none'  %>

  <br>

  <%= paginate @clinics %>
</div>
